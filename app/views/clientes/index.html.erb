<p class="text-success"><%= notice %></p>

<h1>Clientes</h1>

<div id="clientes">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.endereco %></td>
          <td><%= cliente.telefone %></td>
          <td>
            <%= link_to "Mostrar", cliente, class: "btn btn-primary btn-sm" %>
            <%= link_to "Editar", edit_cliente_path(cliente), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Excluir", cliente, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to "Novo cliente", new_cliente_path, class: "btn btn-success" %>
</p>
