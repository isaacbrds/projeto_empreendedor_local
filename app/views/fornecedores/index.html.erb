<p class="text-success"><%= notice %></p>

<h1>Fornecedores</h1>

<div id="fornecedores">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th>Endereço</th>
        <th>Telefone</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @fornecedores.each do |fornecedor| %>
        <tr>
          <td><%= fornecedor.nome %></td>
          <td><%= fornecedor.endereco %></td>
          <td><%= fornecedor.telefone %></td>
          <td>
            <%= link_to "Mostrar", fornecedor, class: "btn btn-primary btn-sm" %>
            <%= link_to "Editar", edit_fornecedor_path(fornecedor), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Excluir", fornecedor, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<p>
  <%= link_to "Novo fornecedor", new_fornecedor_path, class: "btn btn-success" %>
</p>
